<style>
  /* forms */

input,textarea{
   height: 24px;
  float: center
}

</style>
<%= form_for(@message) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>
<div class="form-text">
  名前:
  <%= f.text_area :name %>

  内容:
  <%= f.text_area :body %>
  
  年齢:
  <%= f.text_area :age %>
  <%= f.submit class: "btn btn-sm btn-primary" %>
<% end %>
</div>